{
  "manifest_version": 3,
  "name": "RFQ Attachment Downloader",
  "version": "1.0",
  "description": "Lists available RFQ files and downloads selected ones",
  "permissions": ["downloads", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
